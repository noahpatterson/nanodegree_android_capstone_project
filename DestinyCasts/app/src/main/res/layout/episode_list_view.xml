<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/episodeContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/episode_touch_selector"
        >

        <ImageView
            android:id="@+id/episodeImageView"
            android:layout_width="@dimen/weeklyEpisodeList_image_width"
            android:layout_height="@dimen/weeklyEpisodeList_image_height"
            tools:src="@drawable/crucible_radio"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="@dimen/default_spacing"
            android:paddingStart="@dimen/default_spacing"
            android:paddingEnd="@dimen/default_spacing">

            <TextView
                android:id="@+id/episodeTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:singleLine="true"
                android:textSize="@dimen/weeklyEpisodeList_title_textSize"
                tools:text="Crucible Radio Ep. 42 - How to Prep for the April Update"/>

            <TextView
                android:id="@+id/episodeDateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="April 7"
                android:paddingBottom="@dimen/weeklyEpisodeList_date_paddingBottom"/>

            <TextView
                android:id="@+id/episodeDescriptionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="3"
                android:ellipsize="end"
                tools:text="Description - a really long description about a podcast. This has a lot of text and I want to konw if it goes off the screen at some point. But we are about to wrap to a new line here. Fun things to come."/>

        </LinearLayout>



    </LinearLayout>
