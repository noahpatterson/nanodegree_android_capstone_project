<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/podcastImageView"
        android:layout_width="@dimen/choose_podcastImage_width"
        android:layout_height="@dimen/choose_podcastImage_height"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/podcastTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/podcastImageView"
        android:paddingTop="@dimen/choose_podcastTitle_paddingTop"
        android:paddingBottom="@dimen/choose_podcastTitle_paddingBottom"
        android:singleLine="false"
        android:textSize="@dimen/choose_podcastTitle_textSize" />
</RelativeLayout>

